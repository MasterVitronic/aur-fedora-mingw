# Maintainer: Nicola Fontana <ntd@entidi.it>
#
# Port of the Fedora package found at
# http://pkgs.fedoraproject.org/cgit/mingw-gtk3.git/

pkgname=fedora-mingw-w64-gtk3
pkgver=3.9.8
pkgrel=1
pkgdesc='GTK+3 is a multi-platform toolkit (mingw-w64)'
arch=(any)
url='http://www.gtk.org/'
license=(LGPL)
groups=(fedora-mingw)
depends=(mingw-w64-crt fedora-mingw-w64-atk fedora-mingw-w64-cairo
         fedora-mingw-w64-gdk-pixbuf fedora-mingw-w64-gettext
         fedora-mingw-w64-glib2 fedora-mingw-w64-win-iconv
         fedora-mingw-w64-pango fedora-mingw-w64-pixman mingw-w64-zlib)
makedepends=(mingw-w64-gcc mingw-w64-pkg-config glib2)
# Upstream packaging has gone wrong:
#
# make[2]: Entering directory `/builddir/build/BUILD/gtk+-3.9.8/build_win32/gdk'
# cd ../.. && /bin/sh /builddir/build/BUILD/gtk+-3.9.8/build-aux/missing automake-1.13 --gnu gdk/Makefile
# /builddir/build/BUILD/gtk+-3.9.8/build-aux/missing: line 81: automake-1.13: command not found
# WARNING: 'automake-1.13' is missing on your system.
#
# Workaround this for now
makedepends+=(autoconf automake libtool)
provides=("mingw-w64-gtk3=$pkgver")
conflicts=(mingw-w64-gtk3)
options=(!strip !buildflags !libtool)
source=("http://ftp.gnome.org/pub/GNOME/sources/gtk+/${pkgver%.*}/gtk+-$pkgver.tar.xz"
        "http://pkgs.fedoraproject.org/cgit/mingw-gtk3.git/plain/gtk3-fix-gdkdevice-win32-compilation.patch?id=604b7d5111184e434cdacb09d9d11c84cae8580d"
        "http://pkgs.fedoraproject.org/cgit/mingw-gtk3.git/plain/0004-BURN-THE-.DEF.patch?id=604b7d5111184e434cdacb09d9d11c84cae8580d"
        "http://pkgs.fedoraproject.org/cgit/mingw-gtk3.git/plain/gtk3-dont-use-unix-specific-print-objects-on-non-unix.patch?id=604b7d5111184e434cdacb09d9d11c84cae8580d"
        "gtk.immodules")
md5sums=('5243b4a63efc454b41bd24d4ffbf4342'
         'd9f2a2def8946da252038db5a75fab89'
         '369582585e60eab9fa5c9aa22a68e41c'
         'ca9d992a78a6ec925ed423b8e940963b'
         '9655591f6ed7b9371dc7c15f8237d383')

_architectures=(i686-w64-mingw32 x86_64-w64-mingw32)

build() {
  # gtk3 != gtk+, so hardcoding it in $tardir
  local tardir="$srcdir/gtk+-$pkgver"
  local builddir
  local arch

  # Apply patches from fedora repository
  cd "$tardir"
  # https://bugzilla.gnome.org/show_bug.cgi?id=704171
  patch -Np0 < '../gtk3-fix-gdkdevice-win32-compilation.patch?id=604b7d5111184e434cdacb09d9d11c84cae8580d'
  # https://bugzilla.gnome.org/show_bug.cgi?id=700445
  patch -Np1 < '../0004-BURN-THE-.DEF.patch?id=604b7d5111184e434cdacb09d9d11c84cae8580d'
  # https://bugzilla.gnome.org/show_bug.cgi?id=704173
  patch -Np1 < '../gtk3-dont-use-unix-specific-print-objects-on-non-unix.patch?id=604b7d5111184e434cdacb09d9d11c84cae8580d'

  autoreconf -if

  export CFLAGS='-O2 -pipe'
  export CXXFLAGS="$CFLAGS"
  unset  LDFLAGS
  unset  CPPFLAGS

  for arch in ${_architectures[@]}; do
    builddir="$srcdir/$pkgname-$pkgver-build-$arch"
    mkdir -p "$builddir"
    cd "$builddir"
    "$tardir/configure" \
      --prefix="/usr/$arch" \
      --build="$CHOST" \
      --host="$arch" \
      --enable-gtk2-dependency \
      --disable-cups
    make
  done
}

package() {
  local arch
  local prefix

  for arch in ${_architectures[@]}; do
    prefix="$pkgdir/usr/$arch"

    cd "$srcdir/$pkgname-$pkgver-build-$arch"
    make DESTDIR="$pkgdir" install

    # Do not remove exe files (leave gtk3-demo.exe for testing purpose)
    find "$prefix" -regex '.*\.\(bat\|def\|exp\)' -exec rm -f {} +
    find "$prefix" -name '*.dll' -exec $arch-strip -xg {} +
    find "$prefix" -name '*.a' -exec $arch-strip -g {} +

    # Compile the basic schemas, a requirement to have working
    # GtkFileChooser (and possibly GtkColorChooser) widgets.
    glib-compile-schemas "$prefix/share/glib-2.0/schemas"
  done
}

