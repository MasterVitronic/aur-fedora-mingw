# Maintainer: Nicola Fontana <ntd@entidi.it>
#
# Port of the Fedora package found at
# http://pkgs.fedoraproject.org/cgit/mingw-gdk-pixbuf.git/
#
# Differently from Fedora, libtiff (tiff image support) and
# jasper (JPEG2000 image support) dependencies are dropped
# and gdiplus support is not enabled.

_realname=gdk-pixbuf
pkgname="fedora-mingw-w64-${_realname}"
pkgver=2.31.3
pkgrel=1
pkgdesc='An image loading library (mingw-w64)'
arch=(any)
url='http://www.gtk.org/'
license=(LGPL)
groups=(fedora-mingw)
depends=(mingw-w64-crt fedora-mingw-w64-glib2 fedora-mingw-w64-freetype
         mingw-w64-libjpeg mingw-w64-libpng)
makedepends=(afm-mingw-w64-makedepends afm-mingw-w64-gobject-introspection wine)
provides=(mingw-w64-gdk-pixbuf2=$pkgver)
conflicts=(mingw-w64-gdk-pixbuf2)
options=(!strip staticlibs !buildflags)
source=("http://ftp.gnome.org/pub/GNOME/sources/${_realname}/${pkgver%.*}/${_realname}-$pkgver.tar.xz"
        "gdk-pixbuf.loaders")
md5sums=('30f3c8d3ad68c411955e3890185c980d'
         'ff9e0cc33a8f5b1889b624ab2bae3337')

_architectures=(i686-w64-mingw32 x86_64-w64-mingw32)

build() {
  local tardir="$srcdir/${_realname}-$pkgver"
  local builddir
  local arch

  for arch in ${_architectures[@]}; do
    builddir="$tardir-build-$arch"
    mkdir -p "$builddir"
    cd "$builddir"
    source $arch-configure "$tardir" \
      --with-included-loaders=png \
      --without-libjasper \
      --disable-silent-rules \
      --enable-introspection
    make
  done
}

package() {
  local arch
  local prefix

  for arch in ${_architectures[@]}; do
    prefix="$pkgdir/usr/$arch"

    cd "$srcdir/${_realname}-$pkgver-build-$arch"
    make DESTDIR="$pkgdir" install

    find "$prefix" -regex '.*\.\(exe\|bat\|def\|exp\)' -exec rm -f {} +
    find "$prefix" -name '*.dll' -exec $arch-strip --strip-unneeded {} +
    find "$prefix" -name '*.a' -exec $arch-strip -g {} +

    rm -fr "$prefix/share/man"
  done
}

# vim:set ts=2 sw=2 et:
