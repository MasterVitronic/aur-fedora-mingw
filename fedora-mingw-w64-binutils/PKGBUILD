# Maintainer: Nicola Fontana <ntd@entidi.it>
#
# Port of the Fedora package found at
# http://pkgs.fedoraproject.org/cgit/mingw-binutils.git/

pkgname=fedora-mingw-w64-binutils
pkgver=2.23.51.0.9
pkgrel=2
pkgdesc='A set of programs to assemble and manipulate binary and object files (mingw-w64)'
arch=(any)
url='http://www.gnu.org/software/binutils/'
license=(GPL LGPL)
groups=(fedora-mingw)
depends=(zlib)
makedepends=(flex bison texinfo)
provides=("mingw-w64-binutils=$pkgver")
conflicts=(mingw-w64-binutils)
options=(!libtool)
source=("http://www.kernel.org/pub/linux/devel/binutils/binutils-$pkgver.tar.xz")
md5sums=('287f50acc495cb01624e6f8312795e2c')

_architectures=(i686-w64-mingw32 x86_64-w64-mingw32)

build() {
  local tardir="$srcdir/${pkgname#fedora-mingw-w64-}-$pkgver"
  local builddir
  local arch

  cd "$tardir"

  for arch in ${_architectures[@]}; do
    builddir="$srcdir/$pkgname-$pkgver-build-$arch"
    mkdir -p "$builddir"
    cd "$builddir"
    # Use a custom makeinfo to force generation of doc
    # also in presence of errors: gas docs and texinfo-5
    # do not fit together.
    "$tardir/configure" \
      --prefix=/usr \
      --target="$arch" \
      --disable-nls \
      MAKEINFO='makeinfo --force --no-warn'
    make
  done
}

package() {
  local arch
  local prefix

  for arch in ${_architectures[@]}; do
    prefix="$pkgdir/usr/$arch"
    cd "$srcdir/$pkgname-$pkgver-build-$arch"
    make DESTDIR="$pkgdir" install
  done

  rm -fr "$pkgdir/usr/lib"
  rm -fr "$pkgdir/usr/share"
}

# vim:set ts=2 sw=2 et:
