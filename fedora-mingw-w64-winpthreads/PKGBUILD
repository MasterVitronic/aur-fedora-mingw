# Maintainer: Nicola Fontana <ntd@entidi.it>
#
# Port of the Fedora package found at
# http://pkgs.fedoraproject.org/cgit/mingw-winpthreads.git/

pkgname=fedora-mingw-w64-winpthreads
pkgver=3.0.0
pkgrel=1
pkgdesc='MinGW-w64 winpthreads for Windows'
arch=(any)
url='http://mingw-w64.sourceforge.net/'
license=('custom')
groups=('fedora-mingw')
depends=()
makedepends=(mingw-w64-gcc)
optdepends=()
provides=(mingw-w64-winpthreads mingw-w64-pthreads)
conflicts=(mingw-w64-pthreads)
replaces=(mingw-w64-winpthreads)
backup=()
options=(!strip !buildflags !libtool)
source=("http://downloads.sourceforge.net/sourceforge/mingw-w64/mingw-w64/mingw-w64-v$pkgver.tar.bz2")
md5sums=('22b0030702fe00927daf1ae6ddfb526e')

_architectures=(i686-w64-mingw32 x86_64-w64-mingw32)

build() {
  local tardir="$srcdir/mingw-w64-v$pkgver"
  local builddir
  local arch

  export CFLAGS='-O2 -pipe'
  export CXXFLAGS="$CFLAGS"
  unset  LDFLAGS
  unset  CPPFLAGS

  for arch in ${_architectures[@]}; do
    builddir="$srcdir/$pkgname-$pkgver-build-$arch"
    mkdir -p "$builddir"
    cd "$builddir"
    "$tardir/mingw-w64-libraries/winpthreads/configure" \
      --prefix="/usr/$arch" \
      --host="$arch"
  done
}

package() {
  local arch
  local prefix
  local includedir

  for arch in ${_architectures[@]}; do
    prefix="$pkgdir/usr/$arch"
    includedir="$prefix/include"

    cd "$srcdir/$pkgname-$pkgver-build-$arch"
    make DESTDIR="$pkgdir" install

    find "$prefix" -regex '.*\.\(exe\|bat\|def\|exp\)' -exec rm -f {} +
    find "$prefix" -name '*.dll' -exec $arch-strip -xg {} +
    find "$prefix" -name '*.a' -exec $arch-strip -g {} +
    rm -fr "$prefix/share"
  done
}

# vim:set ts=2 sw=2 et:
